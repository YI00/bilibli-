page{
    padding: 10rpx;
    color: #666;
}
/* 视频*/
.video_wrap{
  
}
.video_wrap video{
    width: 100%;
}
.video_meg{}
.video_title{
    font-size: 35rpx;
}
.video_moreInfo{
    display: flex;  
    font-size: 30rpx;
   
}
.video_moreInfo text{
    margin-right: 15rpx;
}

.video_moreInfo .author{
    color: #000;
}

/* 推荐视频 */
.other_list{
    margin-top: 15rpx;
}
.other_list navigator{
    justify-content: space-between;
    display: flex;
    margin-bottom: 20rpx;
}

.other_img_wrap{
    width: 38%;
    display: flex;
    justify-content: center;
    align-items: center;
    
}
.other_img_wrap image{
    width: 90%;
    border-radius: 15rpx;
}
.other_info{
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.other_title{
    font-size: 30rpx;
    color: #e06f93;
}
.other_detail{
    font-size: 28rpx;
    color: #666;
}

/* 评论列表 */
.comment_wrap{}
.comment_title{
    font-size: 28rpx;
}
.comment_list{}
.comment_item{
    display: flex;
    border-bottom: 1px solid #666;
    color: #666;
    justify-content: space-between;
    padding: 25rpx;
}
.comment_user{
    /* width: 10%; */
    display: flex;
    justify-content: center;
    align-items: center;
}
.comment_user image{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}
.comment_info{
    width: 90%;
    font-size: 28rpx;
    color: #000;
}
.comment_detail{
    display: flex;
    justify-content: space-between;
}
.comment_detail .date{
    color:#666;
}